@model IEnumerable<PedalParadise.Models.RepairRequest>
@{
    ViewData["Title"] = "My Repair Requests";
}

<div class="mb-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">My Repair Requests</h1>
        <a asp-action="Create" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-md">
            New Repair Request
        </a>
    </div>
    
    @if (Model.Any())
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Submitted Date</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bike Details</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var repair in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@repair.RepairID</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@repair.SubmittedDate.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900 truncate max-w-xs">@repair.BikeDetails</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @{
                                    var statusColor = repair.Status switch {
                                        "Pending" => "bg-yellow-100 text-yellow-800",
                                        "Diagnosis" => "bg-blue-100 text-blue-800",
                                        "PartsOrdered" => "bg-purple-100 text-purple-800",
                                        "InProgress" => "bg-indigo-100 text-indigo-800",
                                        "Completed" => "bg-green-100 text-green-800",
                                        "Closed" => "bg-gray-100 text-gray-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    };
                                }
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusColor">
                                    @repair.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a asp-action="Details" asp-route-id="@repair.RepairID" class="text-green-600 hover:text-green-900 mr-3">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">No repair requests yet</h2>
            <p class="text-gray-600 mb-6">You haven't submitted any repair requests. Need your bike fixed?</p>
            <a asp-action="Create" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-md inline-block">
                Create a Repair Request
            </a>
        </div>
    }
</div>