@model IEnumerable<PedalParadise.Models.Product>
@{
    ViewData["Title"] = "Products";
    var currentCategory = ViewData["CurrentCategory"] as string;
    var currentSearch = ViewData["CurrentSearch"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Products</h1>
    
    <div class="flex flex-col md:flex-row gap-4 mb-6">
        <!-- Search form -->
        <div class="w-full md:w-1/3">
            <form asp-action="Index" method="get" class="flex">
                <input type="hidden" name="category" value="@currentCategory" />
                <input type="hidden" name="sortOrder" value="@currentSort" />
                <input type="text" name="search" value="@currentSearch" placeholder="Search products..." 
                       class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-green-600" />
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-r-md">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </form>
        </div>
        
        <!-- Category filter -->
        <div class="w-full md:w-1/3">
            <div class="relative">
                <button type="button" class="w-full px-4 py-2 text-left bg-white border border-gray-300 rounded-md flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-green-600" id="category-dropdown">
                    <span>@(string.IsNullOrEmpty(currentCategory) ? "All Categories" : currentCategory)</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div class="absolute z-10 mt-1 w-full bg-white shadow-lg rounded-md hidden" id="category-menu">
                    <a asp-action="Index" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">All Categories</a>
                    <a asp-action="Index" asp-route-category="Road" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Road</a>
                    <a asp-action="Index" asp-route-category="Mountain" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Mountain</a>
                    <a asp-action="Index" asp-route-category="Electric" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Electric</a>
                    <a asp-action="Index" asp-route-category="Hybrid" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Hybrid</a>
                    <a asp-action="Index" asp-route-category="Accessories" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Accessories</a>
                    <a asp-action="Index" asp-route-category="Apparel" asp-route-search="@currentSearch" asp-route-sortOrder="@currentSort" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Apparel</a>
                </div>
            </div>
        </div>
        
        <!-- Sort options -->
        <div class="w-full md:w-1/3">
            <div class="relative">
                <button type="button" class="w-full px-4 py-2 text-left bg-white border border-gray-300 rounded-md flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-green-600" id="sort-dropdown">
                    <span>Sort By: @(currentSort == "price_asc" ? "Price (Low to High)" : 
                                     currentSort == "price_desc" ? "Price (High to Low)" :
                                     currentSort == "name_desc" ? "Name (Z to A)" : "Name (A to Z)")</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div class="absolute z-10 mt-1 w-full bg-white shadow-lg rounded-md hidden" id="sort-menu">
                    <a asp-action="Index" asp-route-category="@currentCategory" asp-route-search="@currentSearch" asp-route-sortOrder="name_asc" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Name (A to Z)</a>
                    <a asp-action="Index" asp-route-category="@currentCategory" asp-route-search="@currentSearch" asp-route-sortOrder="name_desc" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Name (Z to A)</a>
                    <a asp-action="Index" asp-route-category="@currentCategory" asp-route-search="@currentSearch" asp-route-sortOrder="price_asc" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Price (Low to High)</a>
                    <a asp-action="Index" asp-route-category="@currentCategory" asp-route-search="@currentSearch" asp-route-sortOrder="price_desc" 
                       class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Price (High to Low)</a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Product grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var product in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="h-48 bg-gray-200">
                    <!-- Product image would go here -->
                </div>
                <div class="p-4">
                    <h2 class="text-lg font-semibold text-gray-800 mb-2">@product.Name</h2>
                    <p class="text-gray-600 mb-2">Category: @product.Category</p>
                    <p class="text-gray-600 mb-3 line-clamp-2">@product.Description</p>
                    <div class="flex justify-between items-center">
                        <span class="text-lg font-bold text-green-600">$@product.Price.ToString("F2")</span>
                        <div class="flex gap-2">
                            <a asp-action="Details" asp-route-id="@product.ProductID" 
                               class="bg-white hover:bg-gray-100 text-green-600 border border-green-600 px-3 py-1 rounded">Details</a>
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="id" value="@product.ProductID" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 p-4 rounded-md">
            No products found matching your criteria. Try different search terms or filters.
        </div>
    }
    
    @if (Context.Session.GetString("UserType") == "Employee")
    {
        <div class="mt-8">
            <a asp-action="Create" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-md">
                Add New Product
            </a>
        </div>
    }
</div>

@section Scripts {
<script>
    // Simple dropdown toggle script
    document.getElementById('category-dropdown').addEventListener('click', function() {
        document.getElementById('category-menu').classList.toggle('hidden');
    });
    
    document.getElementById('sort-dropdown').addEventListener('click', function() {
        document.getElementById('sort-menu').classList.toggle('hidden');
    });
    
    // Close dropdowns when clicking outside
    window.addEventListener('click', function(e) {
        if (!document.getElementById('category-dropdown').contains(e.target)) {
            document.getElementById('category-menu').classList.add('hidden');
        }
        if (!document.getElementById('sort-dropdown').contains(e.target)) {
            document.getElementById('sort-menu').classList.add('hidden');
        }
    });
</script>
}