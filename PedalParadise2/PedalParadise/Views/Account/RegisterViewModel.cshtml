@model PedalParadise.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Create an Account</h1>
    
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
                <label asp-for="FirstName" class="block text-gray-700 mb-2">First Name</label>
                <input asp-for="FirstName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="LastName" class="block text-gray-700 mb-2">Last Name</label>
                <input asp-for="LastName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
        </div>
        
        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 mb-2">Email</label>
            <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Password" class="block text-gray-700 mb-2">Password</label>
            <input asp-for="Password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="block text-gray-700 mb-2">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Phone" class="block text-gray-700 mb-2">Phone Number</label>
            <input asp-for="Phone" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-6">
            <label asp-for="Address" class="block text-gray-700 mb-2">Address</label>
            <textarea asp-for="Address" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" rows="3"></textarea>
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>
        
        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-md">Register</button>
    </form>
    
    <p class="mt-4 text-center text-gray-600">
        Already have an account? <a asp-action="Login" class="text-green-600 hover:underline">Login</a>
    </p>
</div>