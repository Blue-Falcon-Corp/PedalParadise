@model PedalParadise.Models.ViewModels.CheckoutViewModel
@using PedalParadise.Models.ViewModels
@{
    ViewData["Title"] = "Checkout";
    var cartItems = Context.Session.GetString("Cart");
    var cart = new List<CartViewModel>();
    decimal subtotal = 0;
    decimal shipping = 5.99m;
    if (!string.IsNullOrEmpty(cartItems))
    {
        cart = System.Text.Json.JsonSerializer.Deserialize<List<CartViewModel>>(cartItems) ?? new List<CartViewModel>();
        subtotal = cart.Sum(i => i.TotalPrice);
    }
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Checkout</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Checkout Form -->
        <div class="md:col-span-2">
            <div class="bg-white rounded-lg shadow-md p-6">
                <form asp-action="Checkout" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                    
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Shipping Information</h2>
                    <div class="mb-6">
                        <label asp-for="ShippingAddress" class="block text-gray-700 mb-2">Shipping Address</label>
                        <textarea asp-for="ShippingAddress" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" rows="3"></textarea>
                        <span asp-validation-for="ShippingAddress" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Payment Information</h2>
                    <div class="mb-4">
                        <label asp-for="CardName" class="block text-gray-700 mb-2">Name on Card</label>
                        <input asp-for="CardName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
                        <span asp-validation-for="CardName" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="CardNumber" class="block text-gray-700 mb-2">Card Number</label>
                        <input asp-for="CardNumber" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
                        <span asp-validation-for="CardNumber" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="grid grid-cols-2 gap-4 mb-6">
                        <div>
                            <label asp-for="CardExpiry" class="block text-gray-700 mb-2">Expiration Date (MM/YY)</label>
                            <input asp-for="CardExpiry" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" placeholder="MM/YY" />
                            <span asp-validation-for="CardExpiry" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="CardCVV" class="block text-gray-700 mb-2">CVV</label>
                            <input asp-for="CardCVV" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-600" />
                            <span asp-validation-for="CardCVV" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                    
                    <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-md">
                        Place Order
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Order Summary -->
        <div class="md:col-span-1">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Summary</h2>
                
                <div class="border-b border-gray-200 pb-4 mb-4">
                    @if (cart != null && cart.Any())
                    {
                        foreach (var item in cart)
                        {
                            <div class="flex justify-between mb-2">
                                <span class="text-gray-700">@(item?.Name ?? "Unknown") (x@(item?.Quantity ?? 0))</span>
                                <span class="text-gray-700">$@(item?.TotalPrice.ToString("F2") ?? "0.00")</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-gray-500">Your cart is empty</div>
                    }
                </div>
                
                <div class="mb-4">
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-700">Subtotal</span>
                        <span class="text-gray-700">$@subtotal.ToString("F2")</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-700">Shipping</span>
                        <span class="text-gray-700">$@shipping.ToString("F2")</span>
                    </div>
                    <div class="flex justify-between font-bold">
                        <span>Total</span>
                        <span>$@((subtotal + shipping).ToString("F2"))</span>
                    </div>
                </div>
                
                <a asp-controller="Cart" asp-action="Index" class="block text-center text-green-600 hover:underline mt-4">
                    Return to cart
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}