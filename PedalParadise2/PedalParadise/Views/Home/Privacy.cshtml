@{
    ViewData["Title"] = "Privacy Policy";
}

 <div class="container-fluid bg-light py-5">
    <div class="container text-center">
        <h1 class="fw-bold text-success mb-4">Privacy Policy</h1>
        <p class="text-muted">Your privacy is important to us. This policy explains how we collect, use, and protect your personal information when you interact with Pedal Paradise.</p>
    </div>
</div>

<!-- Information Collection -->
<div class="container py-5">
    <h2 class="fw-bold text-dark mb-3">What Information We Collect</h2>
    <p class="text-muted">When you shop, request repairs, or interact with our website, we may collect certain information to improve your experience.</p>

    <ul class="list-group list-group-flush mt-3">
        <li class="list-group-item">✓ Name, contact details, and shipping address</li>
        <li class="list-group-item">✓ Payment information (securely processed through third-party providers)</li>
        <li class="list-group-item">✓ Order history and repair service details</li>
        <li class="list-group-item">✓ Cookies and website usage data for analytics</li>
    </ul>
</div>

<!-- Use of Information -->
<div class="container-fluid bg-success text-white py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">How We Use Your Information</h2>
        <p class="text-white text-center">We use collected data to enhance your experience, process transactions, and improve our services while keeping your information secure.</p>

        <ul class="list-group list-group-flush mt-3">
            <li class="list-group-item bg-light text-dark">✓ Processing orders and repair requests</li>
            <li class="list-group-item bg-light text-dark">✓ Communicating updates about your purchases or services</li>
            <li class="list-group-item bg-light text-dark">✓ Improving website functionality and user experience</li>
            <li class="list-group-item bg-light text-dark">✓ Ensuring security and fraud prevention</li>
        </ul>
    </div>
</div>

<!-- Data Protection -->
<div class="container py-5">
    <h2 class="fw-bold text-dark mb-3">How We Protect Your Information</h2>
    <p class="text-muted">Your security is our priority. We implement industry-standard measures to safeguard your personal data.</p>

    <ul class="list-group list-group-flush mt-3">
        <li class="list-group-item">✓ Secure encryption for transactions</li>
        <li class="list-group-item">✓ Restricted access to sensitive data</li>
        <li class="list-group-item">✓ Compliance with data protection laws</li>
    </ul>
</div>

<!-- Your Rights & Contact -->
<div class="container-fluid bg-light py-5">
    <div class="container text-center">
        <h2 class="fw-bold text-dark mb-4">Your Rights & Choices</h2>
        <p class="text-muted">You have the right to access, modify, or request deletion of your personal data. If you have questions or concerns, contact us.</p>

        <a asp-controller="Home" asp-action="Contact" class="btn btn-success btn-lg px-4">Contact Us</a>
    </div>
</div>