@model IEnumerable<PedalParadise.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<!--title, motto and others-->
<div class="container-fluid text-center m-3">
    <h1 class="display-3">🌴🚲 Pedal Paradise 🚲🌴</h1>
    <p class="display-6">"Your ride starts here."</p>
    <p class="">Your one-stop shop for quality bicycles, accessories, and expert repair services.</p>
</div>

<!-- Hero Section -->
<div class="container text-center">
    <div class="btn-group justify-content-center" role="group">       
        <a asp-controller="Products" asp-action="Index" type="button" class="btn btn-lg btn-info col">Shop Now</a>
        <a asp-controller="Repairs" asp-action="Index" type="button" class="btn btn-lg btn-warning col">Repair Services</a>
    </div>
</div>

<!-- Featured Products -->
<div class="container pt-4 text-center mb-4">
    <h2 class="mb-6">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="card col-lg-4 col-md-6 ">
                <img src="~/product-image.jpeg" class="card-img-top" alt="product image">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <div class="flex items-center">
                        <span class="lead"><strong>$@product.Price.ToString("F2")</strong></span>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="id" value="@product.ProductID" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="text-black px-4 py-2 rounded"><strong>Add to Cart</strong></button>
                        </form>
                    </div>
                </div>
            </div>
        }
        
    </div>
    <div class="text-center mt-6">
        <a asp-controller="Products" asp-action="Index" class="inline-block border border-green-600 text-green-600 hover:bg-green-600 hover:text-white px-6 py-2 rounded-lg">View All Products</a>
    </div>
</div>

<!-- Features Section -->
