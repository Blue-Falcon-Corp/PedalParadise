@model IEnumerable<PedalParadise.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<!-- Title and Motto -->
<div class="container-fluid text-center bg-light py-5">
    <h1 class="display-3">🌴🚲 Pedal Paradise 🚲🌴</h1>
    <p class="lead">"Your ride starts here."</p>
    <p class="text-muted">Your one-stop shop for quality bicycles, accessories, and expert repair services.</p>
</div>

<!-- Hero Section -->
<div class="container-fluid bg-success text-white py-5 text-center">
    <h2 class="mb-4">Ready to Ride?</h2>
    <div class="d-grid gap-3 d-sm-flex justify-content-center">
        <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-light text-success fw-bold px-4">Shop Now</a>
        <a asp-controller="Repairs" asp-action="Index" class="btn btn-lg btn-outline-light px-4">Repair Services</a>
    </div>
</div>

<!-- Featured Products Section -->
<div class="container py-5">
    <h2 class="text-center fw-bold mb-5">Featured Products</h2>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm">
                    <img src="~/product-image.jpeg" class="card-img-top" alt="Product Image">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-success fw-bold">$@product.Price.ToString("F2")</span>
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="id" value="@product.ProductID" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-outline-success btn-sm">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-5">
        <a asp-controller="Products" asp-action="Index" class="btn btn-success px-4">View All Products</a>
    </div>
</div>

<!-- Features Section -->
